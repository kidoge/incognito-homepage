{
  "manifest_version": 2,
  "name": "Incognito Homepage",
  "version": "0.1",

  "description": "Chrome plugin for setting a homepage for the incognito mode",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },

  "browser_action": {
    "default_icon": "images/icon_128.png"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "author": "Kidon Son",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [ "js/options.js", "js/jquery-3.2.1.min.js", "css/style.css" ]
}
