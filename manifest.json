{
  "manifest_version": 2,
  "name": "Incognito Homepage",
  "version": "0.2.2",
  "version_name": "0.2.2",
  "author": "Kidon Son",

  "description": "Chrome plugin for setting a homepage for the incognito mode",
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },

  "browser_action": {
    "default_icon": "images/icon_128.png"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },

  "background": {
    "scripts": ["js/defaults.js", "js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
